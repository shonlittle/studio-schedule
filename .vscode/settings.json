{
  // Disable format on save for Python files
  "editor.formatOnSave": false,
  "[python]": {
    "editor.formatOnSave": false
  },

  // Python formatter settings
  "python.formatting.provider": "none",

  // Black formatter settings (if installed)
  "black.line-length": 79,

  // Autopep8 settings (if installed)
  "python.formatting.autopep8Args": [
    "--max-line-length=79",
    "--aggressive",
    "--aggressive"
  ],

  // Yapf settings (if installed)
  "python.formatting.yapfArgs": [
    "--style={based_on_style: pep8, column_limit: 79}"
  ],

  // Flake8 settings
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length=79"],

  // Editor settings to help with line length
  "editor.rulers": [79],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 79,
  "editor.wrappingIndent": "indent"
}
