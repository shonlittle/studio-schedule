# Normalizes editor configuration.
# http://editorconfig.org
root = true

# All files
[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf

# Markdown files
[*.{md,markdonw}]
trim_trailing_whitespace = false

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 79
